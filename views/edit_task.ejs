<%- include('partials/header.ejs') -%>
<style>
  .edit-box {
    position: relative;
    top: 150px;
    
  }
</style>
<div class="container edit-box w-50">

  <div class="card text-center">
    <div class="card-header">Todays' Task</div>
    <div class="card-body">
      <h5 class="card-title">Edit Task</h5>
      <form action="/api/v1/tasks/<%=task.id %>?_method=PATCH" method="post">
        <!-- completion checkbox -->
        <div class ='form-check d-flex mb-3'>
          <input  class = "form-check-input" type="checkbox"  name = 'myclick' value= "on" <%= task.completed ? 'checked' : '' %> id= "<%= task.id %>";>
          <label class="ms-3 form-check-label">Completed</label>
        </div>
        <!-- input field for input, initial value is populated in the field -->
        <input type="text" class="form-control mb-2" name="name"  value="<%= task.name %>" autocomplete="off" />
        <!-- Action buttons -->
      <div class="d-flex justify-content-end">
        <!-- save button -->
        <button type="submit" class = 'btn btn-success btn-sm'>Save changes</button>
        <!-- cancel button -->
        <a href="/api/v1/tasks" class="ms-2 btn btn-secondary btn-sm">Cancel</a>
      </div>
    </form>
    </div>
  </div>

</div>
<%- include('partials/footer.ejs') -%>
